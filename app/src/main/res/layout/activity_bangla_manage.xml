<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".admin.BanglaManage">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <EditText
                android:id="@+id/questionNameB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Question"/>
            <EditText
                android:id="@+id/firstOptionB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Option" />
            <EditText
                android:id="@+id/secondOptionB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Second Option" />
            <EditText
                android:id="@+id/thirdOptionB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Third Option" />
            <EditText
                android:id="@+id/fourthOptionB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fourth Option" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Answer"
                android:textAlignment="center"
                android:textSize="15sp"
                android:background="#F3F0E5"/>
            <RadioGroup
                android:id="@+id/banglaAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/banglaRadioA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"/>
                <RadioButton
                    android:id="@+id/banglaRadioB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"/>
                <RadioButton
                    android:id="@+id/banglaRadioC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"/>
                <RadioButton
                    android:id="@+id/banglaRadioD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D"/>
            </RadioGroup>
            <Button
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:text="save"
                android:onClick="SaveBTN"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>